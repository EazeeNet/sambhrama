						<%= link_to "Sign out", destroy_user_session_path, :method=>:delete %>
					<% else %>
						<%= link_to_unless_current "Sign up", new_user_registration_path %> | 
						<%= link_to_unless_current "Sign in", new_user_session_path %>
					<% end %>
        </div>
    </div><!--  END "header"  //-->		
		<div id="container" class="clearfix">
			<div id="toppanel" class="clearfix">
				<div id="navigation">
					<ul>
						<li class="<%= check_active("home", "index") %>"><%= link_to 'Home', root_path, :class=>'main_category'%></li>
						<li class="<%= check_active("static", "about_us") %>"><%= link_to 'About Us', {:controller=>'static', :action=>'about_us'}, :class=>'main_category'%></li>						
						<li class="<%= check_active("static", "kannada_culture") %>"><%= link_to 'Kannada Culture', {:controller=>'static', :action=>'kannada_culture'}, :class=>'main_category'%></li>
						<li class="<%= check_active("static", "about_member") %>"><%= link_to 'Member', {:controller=>'static', :action=>'about_member'}, :class=>'main_category'%></li>
						<li class="<%= check_active("static", "contact") %>"><%= link_to 'Contact Us', {:controller=>'static', :action=>'contact'}, :class=>'main_category'%></li>
					</ul>
				</div>
				<div id="search">
                  <form method="get" action="###" id="searchform">
                        <input type="text" name="s" value="Enter keywords..." onfocus="if (this.value == 'Enter keywords...') {this.value = '';}" onblur="if (this.value == '') {this.value = 'Enter keywords...';}" class="field" id="s">
                        <input type="submit" value="Search" name="submit" class="submit">
                    </form>
            	</div>				
			</div>
